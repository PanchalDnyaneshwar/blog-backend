// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Seed script configuration

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  name              String
  password          String
  role              UserRole  @default(USER)
  emailVerified     Boolean   @default(false) @map("email_verified")
  emailVerifyToken  String?   @map("email_verify_token")
  emailVerifyExpiry DateTime? @map("email_verify_expiry")
  resetToken        String?   @map("reset_token")
  resetTokenExpiry  DateTime? @map("reset_token_expiry")
  bio               String?   @db.Text
  avatar            String?
  website           String?
  github            String?
  twitter           String?
  linkedin          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  posts              Post[]
  comments           Comment[]
  bookmarks          Bookmark[]
  postLikes          PostLike[]
  commentLikes       CommentLike[]
  progress           UserProgress[]
  readingHistory     ReadingHistory[]
  problemSubmissions ProblemSubmission[]
  notifications      Notification[]
  followers          Follow[] @relation("UserFollowers")
  following          Follow[] @relation("UserFollowing")

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  EDITOR
}

// Admin User Model (separate for admin panel)
model AdminUser {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("admin_users")
}

enum AdminRole {
  ADMIN
  EDITOR
}

// Category Model (with hierarchy support)
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  parentId    Int?     @map("parent_id")
  orderIndex  Int      @default(0) @map("order_index")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")
  posts    Post[]

  @@index([slug])
  @@index([parentId])
  @@map("categories")
}

// Tag Model
model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  posts Post[]

  @@index([slug])
  @@map("tags")
}

// Post Model
model Post {
  id              Int       @id @default(autoincrement())
  title           String
  slug            String    @unique
  excerpt         String?   @db.Text
  content         String    @db.Text
  featuredImage   String?   @map("featured_image")
  categoryId      Int?      @map("category_id")
  authorId        Int?      @map("author_id")
  published       Boolean   @default(false)
  views           Int       @default(0)
  readingTime     Int       @default(0) @map("reading_time")
  metaTitle       String?   @map("meta_title")
  metaDescription String?   @map("meta_description") @db.Text
  metaKeywords    String?   @map("meta_keywords")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  publishedAt     DateTime? @map("published_at")

  category       Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  author         User?            @relation(fields: [authorId], references: [id], onDelete: SetNull)
  tags           Tag[]
  comments       Comment[]
  bookmarks      Bookmark[]
  likes          PostLike[]
  readingHistory ReadingHistory[]

  @@index([slug])
  @@index([published])
  @@index([categoryId])
  @@index([publishedAt])
  @@map("posts")
}

// Comment Model
model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  postId    Int      @map("post_id")
  userId    Int      @map("user_id")
  parentId  Int?     @map("parent_id")
  approved  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  post    Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[]     @relation("CommentReplies")
  likes   CommentLike[]

  @@index([postId])
  @@index([userId])
  @@index([parentId])
  @@map("comments")
}

// Bookmark Model
model Bookmark {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  postId    Int      @map("post_id")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("bookmarks")
}

// Post Like Model
model PostLike {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  postId    Int      @map("post_id")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("post_likes")
}

// Comment Like Model
model CommentLike {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  commentId Int      @map("comment_id")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([userId])
  @@index([commentId])
  @@map("comment_likes")
}

// Follow Model (User Following System)
model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int      @map("follower_id")
  followingId Int     @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")

  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

// User Progress Model (for tutorials/lessons)
model UserProgress {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  tutorialId      Int?      @map("tutorial_id")
  lessonId        Int?      @map("lesson_id")
  progressPercent Int       @default(0) @map("progress_percent")
  completedAt     DateTime? @map("completed_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_progress")
}

// Tutorial Model
model Tutorial {
  id            Int        @id @default(autoincrement())
  title         String
  slug          String     @unique
  description   String?    @db.Text
  difficulty    Difficulty @default(BEGINNER)
  estimatedTime Int        @default(0) @map("estimated_time")
  introContent  String?    @map("intro_content") @db.Text
  published     Boolean    @default(false)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  lessons Lesson[]

  @@index([slug])
  @@index([difficulty])
  @@index([published])
  @@map("tutorials")
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

// Lesson Model
model Lesson {
  id            Int      @id @default(autoincrement())
  tutorialId    Int      @map("tutorial_id")
  title         String
  slug          String
  content       Json // Structured content blocks as JSON
  orderIndex    Int      @default(0) @map("order_index")
  estimatedTime Int      @default(0) @map("estimated_time")
  metadata      Json? // Additional metadata
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  tutorial Tutorial @relation(fields: [tutorialId], references: [id], onDelete: Cascade)

  @@unique([tutorialId, slug])
  @@index([tutorialId])
  @@index([tutorialId, orderIndex])
  @@map("lessons")
}

// Reading History Model (for blog posts)
model ReadingHistory {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  postId    Int      @map("post_id")
  progress  Float    @default(0) // 0-100 percentage
  lastRead  DateTime @default(now()) @map("last_read")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@index([lastRead])
  @@map("reading_history")
}

// Settings Model
model Settings {
  id                     Int      @id @default(autoincrement())
  siteTitle              String   @default("Tech Blog") @map("site_title")
  siteDescription        String?  @map("site_description")
  siteUrl                String?  @map("site_url")
  adminEmail             String?  @map("admin_email")
  defaultMetaTitle       String?  @map("default_meta_title")
  defaultMetaDescription String?  @map("default_meta_description") @db.Text
  twitterHandle          String?  @map("twitter_handle")
  facebookPage           String?  @map("facebook_page")
  githubUrl              String?  @map("github_url")
  theme                  String   @default("light")
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

// Problem Model (for practice problems)
model Problem {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  description String     @db.Text
  difficulty  Difficulty @default(BEGINNER)
  category    String? // e.g., "arrays", "strings", "algorithms"
  constraints String?    @db.Text // Problem constraints
  examples    Json? // Array of example inputs/outputs
  starterCode String?    @map("starter_code") @db.Text // Default starter code
  solution    String?    @db.Text // Official solution (hidden from users)
  hints       Json? // Array of hints
  tags        String[]   @default([]) // Tags for filtering
  published   Boolean    @default(false)
  timeLimit   Int        @default(1000) @map("time_limit") // Time limit in milliseconds
  memoryLimit Int        @default(256) @map("memory_limit") // Memory limit in MB
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  testCases   TestCase[]
  submissions ProblemSubmission[]

  @@index([slug])
  @@index([difficulty])
  @@index([category])
  @@index([published])
  @@map("problems")
}

// Test Case Model (for problem test cases)
model TestCase {
  id             Int      @id @default(autoincrement())
  problemId      Int      @map("problem_id")
  input          String   @db.Text // Input data
  expectedOutput String   @map("expected_output") @db.Text // Expected output
  isPublic       Boolean  @default(false) @map("is_public") // Whether visible to users
  orderIndex     Int      @default(0) @map("order_index")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  @@index([problemId])
  @@index([problemId, orderIndex])
  @@map("test_cases")
}

// Problem Submission Model (user code submissions)
model ProblemSubmission {
  id            Int              @id @default(autoincrement())
  userId        Int              @map("user_id")
  problemId     Int              @map("problem_id")
  code          String           @db.Text
  language      String           @default("javascript") // javascript, python, java, etc.
  status        SubmissionStatus @default(PENDING)
  testResults   Json?            @map("test_results") // Results from test cases
  executionTime Int?             @map("execution_time") // Execution time in ms
  memoryUsed    Int?             @map("memory_used") // Memory used in MB
  errorMessage  String?          @map("error_message") @db.Text
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([problemId])
  @@index([status])
  @@index([userId, problemId])
  @@index([createdAt])
  @@map("problem_submissions")
}

enum SubmissionStatus {
  PENDING
  RUNNING
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  MEMORY_LIMIT_EXCEEDED
  RUNTIME_ERROR
  COMPILATION_ERROR
}

// Notification Model
model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int              @map("user_id")
  type      NotificationType
  title     String
  message   String           @db.Text
  link      String? // URL to related content
  read      Boolean          @default(false)
  readAt    DateTime?        @map("read_at")
  metadata  Json? // Additional data (e.g., postId, commentId, etc.)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@index([userId, createdAt])
  @@index([type])
  @@map("notifications")
}

enum NotificationType {
  COMMENT_REPLY
  COMMENT_MENTION
  POST_PUBLISHED
  POST_LIKED
  TUTORIAL_COMPLETED
  PROBLEM_SOLVED
  SYSTEM_ANNOUNCEMENT
  FOLLOW
  BOOKMARK_UPDATE
}
